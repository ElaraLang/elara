import Prelude
import Elara.Prim
import String

-- Demonstrates: Automatic currying (all functions take one argument)
def add : Int -> Int -> Int
let add x y = x + y

def multiply : Int -> Int -> Int
let multiply x y = x * y

let main =
    -- Partial application
    let addFive = add 5
    let double = multiply 2
    
    -- Function chaining
    let result = addFive (double 10) 
    
    println ("(10 * 2) + 5 = " ++ toString result)
